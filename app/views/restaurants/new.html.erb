
<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-sm-4 col-sm-offset-4">
      <h1>Restaurant New</h1>
        <ul>
        <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category,as: :radio_buttons, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
        <%= f.input :phone_number %>
        <%= f.button :submit, class: "btn btn-primary" %>
       <% end %>
        </ul>
    </div>
  </div>
</div>

<%= link_to 'Go Back', restaurants_path%>
